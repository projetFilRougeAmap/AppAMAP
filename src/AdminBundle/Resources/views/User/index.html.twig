{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

   <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
    <thead>
        <tr>
            <th>Nom et Prenom</th>
            <th>Email</th>
            <th>RÃ´le</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>

    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }} {{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
						{%  if ( "ROLE_RESPONSABLE"==role) %}
						Responsable AMAP
						
						{% elseif  ( "ROLE_PRODUCTEUR"==role)%} 
						Producteur
						{% elseif  ( "ROLE_ADMIN"==role)%} 
						Administrateur
						{%  endif %}
                        <br>
                    {% endfor %}
                    {% if  ( user.roles | length ==1)%}
						Utilisateur
					{% endif %}
                </td>
                <td>
                    <a href="{{path('user_edit', { 'id': user.id }) }}">Modifier</a>
                </td>
                <td>
                    <a href="{{path('user_delete', { 'id': user.id }) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-primary">Ajouter un nouvel utilisateur</a>
{% endblock %}
