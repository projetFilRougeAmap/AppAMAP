{% extends 'baseAdmin.html.twig' %} {% block body %}
<a href="{{ path('Entrepot_new') }}" class="btn btn-primary">Ajouter un
	nouvel entrepot</a>

<div id="content" class="padding-20">
	<div class="panel panel-default">
		<div class="panel-heading panel-heading-transparent">
			<strong>Liste des entrepots</strong>
		</div>

		<div class="panel-body">
			<table class="table table-striped table-hover table-bordered"
				id="sample_editable_1">
				<thead>
					<tr>
						<th>Libelle</th>
						<th>Ville</th>
{# 						<th>Modifier</th>#}
						<th>Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{% for entrepot in entrepots %}
					<tr>
						<td>{{ entrepot.libelle }}</td>
						<td>{{ entrepot.adresse.ville }}</td>
{# 						<td><a href="{{path('Entrepot_edit', { 'id': entrepot.id }) }}">Modifier</a>#}
{# 						</td>#}
						<td><a href="{{path('Entrepot_delete', { 'id': entrepot.id }) }}">Supprimer</a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}
